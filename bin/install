#!/bin/bash

set -e

function populate_build_info() {
    local main_file=$1

	sed -i -e "s/TRAVIS_BUILD_NUMBER/$TRAVIS_BUILD_NUMBER/g" $main_file
	sed -i -e "s/TRAVIS_COMMIT/$TRAVIS_COMMIT/g" $main_file
}

if [ "$TRAVIS_BUILD_NUMBER" != "" ]; then

  populate_build_info dea_logging_agent/src/deaagent/deaagent/main.go
  populate_build_info server/src/loggregator/loggregator/main.go
  populate_build_info proxy/src/sourcehasher/sourcehasher/main.go
  populate_build_info proxy/src/sinkhasher/sinkhasher/main.go

fi

$(dirname $0)/go install deaagent/deaagent
$(dirname $0)/go install loggregator/loggregator
$(dirname $0)/go install sourcehasher/sourcehasher
$(dirname $0)/go install sinkhasher/sinkhasher

